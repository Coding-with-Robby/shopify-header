<div class="width">
  <div class="header-flex">
    <a href="/" class="header-logo">
      <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ site.name }}">
    </a>

    <button class="header-hamburger">
      <span class="header-hamburger-bar"></span>
      <span class="header-hamburger-bar"></span>
      <span class="header-hamburger-bar"></span>
    </button>

    <ul class="header-nav">
      {% for link in section.settings.navigation.links %}
        <li class="header-nav-item">
          <a class="header-nav-anchor" href="{{ link.url }}">
            {{ link.title }}
          </a>

          {% if link.links != blank %}
            <ul class="header-sub">
              {% for child in link.links %}
                <li class="header-sub-item">
                  <a href="{{ child.url }}" class="header-sub-anchor">
                    {{ child.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

<div class="header-nav-overlay"></div>

<style>
  .header {
    padding: {{ section.settings.padding }}px 0;
  }
  .header-logo {
    max-width: {{ section.settings.logo_width }}px;
  }
</style>

<script>
  document.querySelector('.header-hamburger').addEventListener('click', () => {
    document.querySelector('.header').classList.toggle('nav-active');
  });

  document.querySelector('.header-nav-overlay').addEventListener('click', () => {
    document.querySelector('.header').classList.remove('nav-active');
  });
</script>

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "header",
  "settings": [
    {
      "type": "range",
      "id": "padding",
      "label": "Header height",
      "default": 24,
      "min": 5,
      "max": 100,
      "step": 1
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo width",
      "default": 100,
      "min": 20,
      "max": 300,
      "step": 5
    },
    {
      "type": "link_list",
      "id": "navigation",
      "label": "Navigation menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
